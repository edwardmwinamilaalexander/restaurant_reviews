<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-8 offset-md-2">
        <h4><%= link_to restaurant.name, restaurant_path(restaurant) %></h4>
        <p><%= restaurant.address %></p>
        <p><%= restaurant.phone_number %></p>
        <p><%= restaurant.category %></p>
      </div>
    <% end %>
  </div>
</div>
